<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="aguacatala-core">
		<class>com.aguacatala.core.entity.Campaign</class>
		<class>com.aguacatala.core.entity.Mail</class>
		<class>com.aguacatala.core.entity.Status</class>
		<class>com.aguacatala.core.entity.User</class>
		<properties>
			<property name="hibernate.connection.username" value="postgres"/>
			<property name="hibernate.connection.password" value="adminadmin"/>
			<property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/aguacatala"/>
			<property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
		</properties>
	</persistence-unit>
</persistence>
